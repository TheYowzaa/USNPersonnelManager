<Window x:Class="USNPersonnelManager.AddSailorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Sailor" Height="350" Width="350" WindowStartupLocation="CenterOwner"
        Background="#1E1E1E" Foreground="White" FontFamily="Poppins">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Background="#2B2B2B" Foreground="White"/>
        </StackPanel>

        <!-- Rank -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Rank:"/>
            <ComboBox x:Name="RankComboBox" Background="#2B2B2B" Foreground="Black">
                <ComboBoxItem Content="E-2"/>
                <ComboBoxItem Content="E-3"/>
                <ComboBoxItem Content="E-4"/>
                <ComboBoxItem Content="E-6"/>
                <ComboBoxItem Content="E-7"/>
                <ComboBoxItem Content="E-8"/>
            </ComboBox>
        </StackPanel>

        <!-- Server Join Date -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Server Join Date:"/>
            <DatePicker x:Name="JoinDatePicker" Background="#2B2B2B" Foreground="Black"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Add" Width="70" Margin="10,50" Click="AddButton_Click" Background="#4CAF50" Foreground="White"/>
            <Button Content="Cancel" Width="70" Margin="10,50" Click="CancelButton_Click" Background="#D32F2F" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>