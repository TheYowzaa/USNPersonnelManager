<Window x:Class="USNPersonnelManager.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="#1E1E1E" FontFamily="Poppins" FontWeight="Medium"
        Title="UPDATE INFO" Height="475" Width="480"
        Foreground="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Background="#2C2C2C" Height="50" VerticalAlignment="Top">
            <Image Source="/USN.png" Width="48" Height="48" Margin="10,0,0,0"/>
            <TextBlock Text="USN SQUAD MANAGER | UPDATE INFO"
                       FontSize="20" VerticalAlignment="Center" Margin="5,0,0,0"
                       Foreground="White" FontWeight="SemiBold"/>
        </DockPanel>

        <!-- Scrollable Form Content -->
        <ScrollViewer Grid.Row="1"
                      Margin="0,10,0,10"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20,10,20,10" Orientation="Vertical">

                <!-- Who to update -->
                <TextBlock Text="Select Personnel:" FontSize="14" FontWeight="SemiBold" Margin="0,5"/>
                <ComboBox x:Name="PersonnelDropdown"
                          Background="#2B2B2B" Foreground="Black"
                          BorderBrush="#3A3A3A" Padding="5" FontSize="14" Margin="0,0,0,10">
                    <ComboBoxItem Content="Chief Petty Officer Dayzed"/>
                    <ComboBoxItem Content="Junior Petty Officer Yowzaa"/>
                    <ComboBoxItem Content="Petty Officer Xironar"/>
                    <ComboBoxItem Content="Able Seaman Joker"/>
                    <ComboBoxItem Content="Able Seaman Saguy"/>
                    <ComboBoxItem Content="Seawoman Awkward"/>
                    <ComboBoxItem Content="Seaman Gray"/>
                    <ComboBoxItem Content="Seaman Silverhand"/>
                    <ComboBoxItem Content="Seaman TragicDespia"/>
                    <ComboBoxItem Content="Seaman Vivifie"/>
                </ComboBox>

                <!-- LOA Status -->
                <TextBlock Text="LOA Status:" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <ComboBox x:Name="LOAStatusDropdown"
                          Background="#2B2B2B" Foreground="Black"
                          BorderBrush="#3A3A3A" Padding="5" FontSize="14" Margin="0,0,0,10">
                    <ComboBoxItem Content="OFF LOA"/>
                    <ComboBoxItem Content="LOA-1"/>
                    <ComboBoxItem Content="LOA-2"/>
                </ComboBox>

                <!-- Rank -->
                <TextBlock Text="Rank:" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <ComboBox x:Name="RankDropdown"
                          Background="#2B2B2B" Foreground="Black"
                          BorderBrush="#3A3A3A" Padding="5" FontSize="14" Margin="0,0,0,10">
                    <ComboBoxItem Content="E-2"/>
                    <ComboBoxItem Content="E-3"/>
                    <ComboBoxItem Content="E-4"/>
                    <ComboBoxItem Content="E-6"/>
                    <ComboBoxItem Content="E-7"/>
                    <ComboBoxItem Content="E-8"/>
                </ComboBox>

                <!-- Server Join Date -->
                <TextBlock Text="Server Join Date YYYY/MM/DD:" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <DatePicker x:Name="JoinDatePicker"
                            Background="#2B2B2B" Foreground="Black"
                            BorderBrush="#3A3A3A" FontSize="14" Margin="0,0,0,10"/>

                <!-- Date of Last Promotion -->
                <TextBlock Text="Date of Last Promotion YYYY/MM/DD:" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <DatePicker x:Name="LastPromotionDatePicker"
                            Background="#2B2B2B" Foreground="Black"
                            BorderBrush="#3A3A3A" FontSize="14" Margin="0,0,0,10"/>

                <!-- Last Voyage -->
                <TextBlock Text="Last Voyage YYYY/MM/DD:" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <DatePicker x:Name="LastVoyageDatePicker"
                            Background="#2B2B2B" Foreground="Black"
                            BorderBrush="#3A3A3A" FontSize="14" Margin="0,0,0,10"/>

                <!-- Last Voyage Hosted -->
                <TextBlock Text="Last Voyage Hosted YYYY/MM/DD:" FontSize="14" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <DatePicker x:Name="LastVoyageHostedDatePicker"
                            Background="#2B2B2B" Foreground="Black"
                            BorderBrush="#3A3A3A" FontSize="14" Margin="0,0,0,10"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Save"
                    Width="100" Height="35" Margin="10,0"
                    Background="#4CAF50" Foreground="White"
                    BorderThickness="0" Click="SaveButton_Click"
                    Cursor="Hand" FontWeight="SemiBold"/>
            <Button Content="Cancel"
                    Width="100" Height="35" Margin="10,0"
                    Background="#D32F2F" Foreground="White"
                    BorderThickness="0" Click="CancelButton_Click"
                    Cursor="Hand" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>